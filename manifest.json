{
  "manifest_version": 3,
  "name": "SankeyStone",
  "version": "0.0.1",
  "description": "A Chrome extension that creates Sankey diagrams from page data",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SankeyStone - Generate Sankey Diagram"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
